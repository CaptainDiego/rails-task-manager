<h1>List of tasks</h1>

<% @tasks.each do |task| %>
  <ul>
    <li>
      <%= check_box_tag(task.title, value=task.completed, checked=task.completed, options = {disabled: true}) %>
      <%= link_to task.title, task_path(task) %>
    </li>
  </ul>
<% end %>
<%= link_to "+ Create a new task" , new_path %>
